<Page x:Class="TodoManager.UI.Views.TodoItems"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TodoManager.UI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TodoItems">

    <Grid>
        <ListView Margin="10" Name="TodoItems">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <RadioButton Content="{Binding Done}" Width="20" Height="20"></RadioButton>
                        <TextBlock Text="{Binding Content}"></TextBlock>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <GroupBox Header="Create todo list" VerticalAlignment="Bottom">
            <StackPanel>
                <TextBlock>Content:</TextBlock>
                <TextBox Text="{Binding Path=Content}" />
                <Button Margin="0,20" ToolTip="Add todo item" Click="Add"></Button>
            </StackPanel>
        </GroupBox>
    </Grid>

