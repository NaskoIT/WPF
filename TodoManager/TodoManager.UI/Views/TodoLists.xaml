<Page x:Class="TodoManager.UI.Views.TodoLists"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TodoManager.UI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home - Todo Manager">

    <Grid >
        <StackPanel>
            <ListView Name="TodoLists">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}"/>
                        <GridViewColumn>
                            <Button DataContext="{Binding Id}" Click="ShowTodoItems">Show tasks</Button>
                        </GridViewColumn>
                    </GridView >
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
